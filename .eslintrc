{
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "browser": true,
    "jasmine": true,
    "jquery": true
  },
  "rules": {
    "no-debugger": "off",
    "no-useless-constructor": "off",
    "react/jsx-boolean-value": "off",
    "semi": ["error", "always"]
  },
  "plugins": [
    "import",
    "jsx-a11y",
    "promise",
    "react"
  ],
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "16.4"
    }
  }
}
